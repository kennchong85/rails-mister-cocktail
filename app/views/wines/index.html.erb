<!-- Wine Picture Banner -->
<div class="index-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1561955147-e9083536e573?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80);">
  <div class="container">
    <div class="index-banner-text">Wines</div>
  </div>
</div>
<!-- Individual Wine cards -->
<div class="container mt-5">
  <% if @wines.empty? %>
    <div class="category-title">There are no wine added. Please add a new wine.</div>
  <% else %>
    <div class="cards">
      <% @wines.each do |wine| %>
        <%= link_to wine_path(wine), :class=>'no-decoration' do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path wine.photo.key %>')">
            <%= wine.name %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
